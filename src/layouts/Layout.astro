---
import "../styles/global.css";
import BaseHead from "@/components/layout/head/index.astro";
import mlcLogo from "@/assets/images/mlc-business.png";

interface Props {
  lang: string;
  title: string;
  description: string;
}

const { lang = "es", title, description } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <BaseHead title={title} description={description}>
    <slot name="seo-schema" />
  </BaseHead>
  <body class="w-full min-h-screen relative">
    <slot name="header" />
    <slot />
    <slot name="footer" />
  </body>
</html>
